<link rel="stylesheet" type="text/css" href="~/css/Registration.css">
<div class="container" class="registration">

	<h1>В новый путь!</h1>
	<p>Спасибо, что проявляете интерес к нашему проекту</p>
	@Ошибка

	<form method="POST">

  		<div class="form-group fields">
    		<label for="exampleInputEmail1">Почта</label>
    		<input type="email" name="email"   class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ваша почта" value="@Почта">

  		</div>


  		<div class="form-group fields">
    		<label for="exampleInputEmail1">Никнейм</label>
    		<input type="text" name="login" pattern="[0-9A-Za-zА-Яа-яЁё]{0,18}" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Имя пользователя (Максимум 18 символов)" value="@Логин">
  		</div>


  		<div class="form-group fields">
    		<label for="exampleInputPassword1">Пароль</label>
    		<input type="password" name="password" pattern="[0-9A-Za-z]{6,999}" class="form-control" id="exampleInputPassword1" placeholder="Пароль (Минимум 6 символов)">
  		</div>

		<br>
		<div class="form-check">
  			<input class="form-check-input" type="checkbox" id="lisence" value="true" name="lisence">
  			<label class="form-check-label" for="lisence">
    			Я согласен(-а) с условиями <a href="-*Лицензия*-" style="text-decoration: underline">Пользовательского соглашения</a>
  			</label>
		</div>		

		<br>
		<div class="h-captcha" data-sitekey="52ea3eed-3b41-4992-aab0-8b88ada5fb89"></div>
		<br>
  		<button type="submit" class="btn btn-warning ready" style="margin-right: 10px;">Готово</button>
		<a href="auth/" class="already"> Уже есть аккаунт?</a>

	</form>

</div>

<script src="https://js.hcaptcha.com/1/api.js" async defer></script>